
	<h1><%= @page_header %></h1>
	
<% @posts.each do |post| %>
<div id="video-container">
	<a href="/posts/<%= post.id %>">
	<h2 id="postTitle"> Post Title: <%= post.title %></h2>
	<p id="Description"> Description: <%= post.body %></p>
	<iframe src="<%=post.url %>"></iframe>
</div>
	</a>
<div id="buttons">
	<a href="/posts/<%= post.id %>/edit"><button>Edit</button></a>

	<form id='delete' action="/posts/<%= post.id %>" method='POST'>
		<input type="hidden" name="_method" value="DELETE">
		<input id="innerButton" type="submit" value="Delete">
	</form>
</div>
<% end %>